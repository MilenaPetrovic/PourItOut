<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="PourItOut.Views.SetUpPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Label x:Name="lbl1" 
                Text="Enter 1. player:"
                HorizontalOptions="Center" FontSize="Large" TextColor="Black"
                   Margin="0,200,0,20"/>
            <Entry x:Name="playerName" 
                   Placeholder="Player name" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" TextColor="#00d5ff"
                   Margin="0,0,0,20" PlaceholderColor="#00d5ff"
                   FontSize="Large"/>
            <!--Dodati listu igraca ispod -->
            <Button Text="Add a player" Clicked="AddPlayer"  HorizontalOptions="Center" WidthRequest="250"
                    BackgroundColor="#2196F3" 
                    TextColor="White"/>
            <Button Text="Start game" Clicked="Gameplay"   VerticalOptions="End" HorizontalOptions="Center" WidthRequest="250"
                    Margin="0,200,0,50"
                    BackgroundColor="#2196F3" 
                    TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>